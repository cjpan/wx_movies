/* pages/user/user.wxss */
.type-list-container {
  display: flex;
  text-align: center;
  justify-content: space-around;
  margin: 30rpx;
  font-size: 30rpx;
  color: orange;
}

.check {
  border-bottom: 2px solid orange;
}

.uncheck {
  border: none;
}

.comment-card {
  position: relative;
  display: flex;
  margin: 30rpx;
  background-color: #fff;
  border: 1px solid rgba(0, 0, 0, 0.02);
  border-radius: 2rpx;
  box-shadow: 0 2rpx 5rpx 13rpx rgba(0, 0, 0, 0.02);
  height: 360rpx;
}

.comment-card:last-of-type {
  margin-bottom: 120rpx;
}

.movie-image {
  height: 360rpx;
  width: 240rpx;
  flex-shrink: 0;
}

.comment-card-text {
  margin: 30rpx;
}

.movie-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.comment-content {
  position: relative;
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  height: 168rpx;
  overflow: hidden;
}

.comment-audio {
  border: 1rpx solid #ddd;
  text-align: center;
  display: flex;
  width: 300rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  background-color: #ddd;
  justify-content: flex-start;
  align-items: center;
  border-radius: 10rpx;
}

.audio-icon {
  margin-left: 20rpx;
  height: 40rpx;
  width: 40rpx;
}

.audio-duration {
  font-size: 30rpx;
  line-height: 42rpx;
  margin-left: 30rpx;
}

.comment-userinfo {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 20rpx;
}

.comment-avatar {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.comment-username {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  align-content: center;
  background-color: #eee;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}